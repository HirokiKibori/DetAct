@using Data.Util

@using Array = Data.Util.Array;

@foreach(var item in Array.Items) {
    <li>
        @if(item is Text) {
            @((item as Text).Content)
        }
        @if(item is Array) {
            <ul class="json-array no-bullet">
                <JSONArrayPrinter Array="@(item as Array)" />
            </ul>
        }
        @if(item is JSONObject) {
            <ul class="json-object no-bullet">
                <JSONObjectPrinter Object="@(item as JSONObject)" />
            </ul>
        }
    </li>
}

@code {
    [Parameter]
    public Array Array { get; set; }
}
